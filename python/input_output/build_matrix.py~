### convert_data_distance
### from  convert_data in a list [ (X, Y, ....]
import sys

def main(argc : int, argv : list) -> int :
   
    if argc < 2:
        print('Usage: python3 %s inputFile' % (argv[0]))
        exit(1)

    try:
        tmp=[]
        with open(argv[1], 'r') as file:
            print("Converting file: ", argv[1])
        ## jump at the first XXXX lines ===> check the 
            i=1
            while(i<11):    ### are initial lines ... header ===> to improve in the future
                x =  file.readline()
                #print(i, "=>", x , end='')
                #print(x)
                i += 1  

            for row in file:
                line =  row.split()
                x = int(round(float(line[1]))) #
                y =  int(round(float(line[2]))) # 
                #print( x, "-" , y,"::", line )
                #tmp.append(row)
                tmp.append((x,y))
                #print(row[0], row[1])

    except Exception:
        print('Error parsing file %s: ' % (argv[1]))
        exit(1)
         

    print("==>", tmp) # ONE LINE ONLY
    #print("\n Cities: ", len(tmp)) # ONE LINE ONLY
    file.close()

    #print("=========CLOSE IT=========: ", argv[1])

if __name__ == '__main__':
    main(len(sys.argv), sys.argv)
    #print("=========END=========")
