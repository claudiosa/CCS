
function var int : f_how_many_positives(array[int] of int: vetor, int: n) = 
    let{
      var int : temp;
      %temp = 0 ;
      constraint
      forall( i in 1..n )
      ( if (vetor[i] > 0) 
        then
        temp = temp+1
        else
        true %%% to avoid it....
        endif
      );
     
    } in temp ;  %%% A single function to count how many positive values

