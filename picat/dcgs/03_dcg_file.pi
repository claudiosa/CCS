%%%%%
print_L(L) =>
    foreach (I in L)
        % writeln(I) %% print como string   
        print(I), nl
    end.
%%%%%
print_by_line(L) =>
    FD = open("saida.txt",write),
    foreach (I in L)
        print(I),
        write(FD,I),
        nl,
        close(FD)
    end.

