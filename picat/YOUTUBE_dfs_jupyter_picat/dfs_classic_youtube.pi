all_nodes() = Set => 
    L1 = findall(X, arc(X,Y,_)),
    L2 = findall(Y, arc(X,Y,_)),
    new_ordset(L1) = Set_1,
    new_ordset(L2) = Set_2,
    Set = union(Set_1, Set_2).
