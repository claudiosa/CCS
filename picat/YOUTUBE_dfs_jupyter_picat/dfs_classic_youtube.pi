dfs_1(Node, End_Node, Partial_Caminho, Partial_Arestas, Sol) =>
    
   arc(Node, Prox, Aresta),
   not membchk(Prox,Partial_Caminho), %%%% faster 
   %append([Prox], Partial_Caminho,  L_Visitados),
   %append([Aresta], Partial_Arestas, L_Arestas),
   % OU
   L_Visitados = [Prox] ++ Partial_Caminho,
   L_Arestas = [Aresta] ++ Partial_Arestas,
   dfs_1(Prox, End_Node,  L_Visitados, L_Arestas, Sol).


