/*** UMA lista com todos os nós */
all_nodes( Grafo ) = Nodes =>
        %Nodes = sort( [N : Termo in Grafo, {N, _} = Termo ]) . 
        Nodes = [N : Termo in Grafo, {N, _} = Termo ] .   

