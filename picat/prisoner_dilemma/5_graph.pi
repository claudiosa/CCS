print_matrix( M ) =>
  L = M.length,
  C = M[1].length,
  printf("\n \n Neighbours:     \n"),
  foreach(J in 1  .. C)
    printf(" : %d ", J)
  end,
  nl,
  foreach(I in 1  .. L)
   printf("NODE %w : ", I),
    foreach(J in 1  ..  C)
