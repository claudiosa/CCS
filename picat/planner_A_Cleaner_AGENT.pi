/* Get position XY in a grid from a cell with 'c' */
position_c_XY( [X,Y], Map ) =>
  L = Map.length,
  C = Map[1].length,
   
   foreach(I in 1..L , J in 1..C)
	   if (Map[I,J] == 'c') then  
			 X = I,
			 Y = J
			end   %% END  IF INNER

	   end %% END  FOREACH
	 ,
	
	 if( var(X) || var(Y) ) then
	 printf("The c was not found: %d")
	 end	%% END  IF
	 .
	  
%position_c_XY( _ , _) => printf("\n Problem in XY position function \n").

